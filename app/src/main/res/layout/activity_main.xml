<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    tools:context=".MainActivity">    <LinearLayout        android:id="@+id/topLinearLayout"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_alignParentTop="true"        android:background="@color/colorPrimary"        android:gravity="center_horizontal"        android:orientation="vertical"        android:padding="10dp">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="@string/app_name"            android:textColor="@android:color/holo_orange_dark"            android:textSize="26sp"            android:textStyle="bold" />        <TextView            android:id="@+id/tvStatus"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:gravity="center"            android:text="@string/connected"            android:textAlignment="center"            android:textColor="@android:color/holo_green_light"            android:textSize="12sp"            android:textStyle="bold" />    </LinearLayout>    <TextView        android:id="@+id/filesCountTextView"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_below="@id/topLinearLayout"        android:gravity="center_horizontal"        android:padding="10dp"        android:text="@string/dummy"        android:textColor="@android:color/black"        android:textSize="18sp"        android:textStyle="bold" />    <EditText        android:id="@+id/logTextView"        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_above="@+id/controlLinearLayout"        android:layout_below="@id/filesCountTextView"        android:background="#eee"        android:focusable="false"        android:gravity="start"        android:inputType="none"        android:maxLines="100"        android:padding="10dp"        android:text="@string/log"        android:textIsSelectable="false"        android:textSize="14sp" />    <LinearLayout        android:id="@id/controlLinearLayout"        style="?android:buttonBarStyle"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_alignParentBottom="true"        android:background="@color/colorPrimary">        <Button            android:id="@+id/startDataCollectionButton"            style="?android:buttonBarButtonStyle"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:drawableTop="@drawable/start_data_collection"            android:onClick="startDataCollectionClick"            android:text="@string/start_data_collection"            android:textColor="@android:color/holo_orange_dark" />        <Button            android:id="@+id/stopDataCollectionButton"            style="?android:buttonBarButtonStyle"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:clickable="false"            android:drawableTop="@drawable/stop_data_collection"            android:onClick="stopDataCollectionClick"            android:text="@string/stop_data_collection"            android:textColor="@android:color/holo_orange_dark" />        <Button android:id="@+id/uploadSensorDataButton"            style="?android:buttonBarButtonStyle"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:drawableTop="@drawable/upload_sensor_data"            android:onClick="uploadSensorDataClick"            android:text="@string/upload_sensor_data"            android:textColor="@android:color/holo_orange_dark" />    </LinearLayout></RelativeLayout>